{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/editor",
        "destination": "/editor.html"
      },
      {
        "source": "/prepare",
        "destination": "/prepare.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}